@model List<ArticleDto>

<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>DİĞER GÖNDERİLER</h2>
        </div>
        <div class="content">
            <ul class="list-group">
                  @foreach (var article in Model) {
                <li class="list-group-item">
                    <a href="post-details.html">
                    <div class="d-flex">
                        <img src="~/images/@article.Image.FileName" alt="Article Image" width="100" height="100">
                            <div class="ms-3">
                                    <h5>@article.Title</h5>
                                    <span>@article.CreatedDate.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>
                    </a>
                </li>
                }
               
            </ul>
        </div>
    </div>
</div>