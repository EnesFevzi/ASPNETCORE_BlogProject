@model List<CategoryDto>


<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>KATEGORİLER</h2>
        </div>
        <div class="content">
            <ul class="list-group">

                @foreach (var category in Model)
                {
                    @*<li><a href="/Home/Search?Keyword=@category.Name.ToLower()">- @category.Name</a></li>*@
                    <li><a asp-area=" " asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.CategoryID">- @category.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>