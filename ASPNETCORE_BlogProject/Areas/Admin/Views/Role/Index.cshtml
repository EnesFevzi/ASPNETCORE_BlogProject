@model List<RoleDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Role Yönetimi /</span> Roller
    </h4>


    <div class="card">
        <div class="table-responsive text-nowrap m-5">

@*             <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">
                Kategori Ekle <i class="bx bx-plus"></i>
            </a>
 *@
            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>NormalizedName</th>
                        <th>ConcurencyStamp</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>NormalizedName</th>
                        <th>ConcurrencyStamp</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var role in Model)
                    {
                        <tr name="@role.Id ">
                            <td>@role.Name</td>
                            <td>@role.NormalizedName</td>
                            <td>@role.ConcurrencyStamp</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}